{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28
    },
    "configurePresets": [
        {
          "name": "native-base",
          "hidden": true,
          "generator": "Ninja",
          "cacheVariables": {
            "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
          }
        },
        {
            "name": "mingw-base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_CXX_COMPILER": "x86_64-w64-mingw32-g++",
                "CMAKE_C_COMPILER": "x86_64-w64-mingw32-gcc",
                "CMAKE_SYSTEM_NAME": "Windows",
                "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "NEVER",
                "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "ONLY",
                "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY",
                "CMAKE_FIND_ROOT_PATH": "/usr/x86_64-w64-mingw32;${sourceDir}/python.3.13.0/tools",
                "PYBIND11_USE_CROSSCOMPILING": "ON",
                "PYBIND11_FINDPYTHON": "NEW",
                "Python_INCLUDE_DIR": "${sourceDir}/python.3.13.0/tools/include",
                "Python_LIBRARY": "${sourceDir}/python.3.13.0/tools/python313.dll",
                "PYTHON_MODULE_EXT_SUFFIX": ".cp313-win_amd64.pyd",
                "PYTHON_MODULE_EXTENSION": ".cp313-win_amd64.pyd"
            },
            "environment": {
                "CXX": "x86_64-w64-mingw32-g++",
                "CC": "x86_64-w64-mingw32-gcc"
            }
        },
        {
            "name": "native-debug",
            "inherits": "native-base",
            "displayName": "Native Debug",
            "binaryDir": "${sourceDir}/build/Debug",
            "installDir": "${sourceDir}/build/Debug/install",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "native-release",
            "inherits": "native-base",
            "displayName": "Native Release",
            "binaryDir": "${sourceDir}/build/Release",
            "installDir": "${sourceDir}/build/Release/install",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "mingw-debug",
            "inherits": "mingw-base",
            "displayName": "MinGW Debug",
            "binaryDir": "${sourceDir}/build/mingw-debug",
            "installDir": "${sourceDir}/build/mingw-debug/install",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mingw-release",
            "inherits": "mingw-base",
            "displayName": "MinGW Release",
            "binaryDir": "${sourceDir}/build/mingw-release",
            "installDir": "${sourceDir}/build/mingw-release/install",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "native-debug",
            "configurePreset": "native-debug"
        },
        {
            "name": "native-release",
            "configurePreset": "native-release"
        },
        {
            "name": "mingw-debug",
            "configurePreset": "mingw-debug"
        },
        {
            "name": "mingw-release",
            "configurePreset": "mingw-release"
        }
    ]
}
